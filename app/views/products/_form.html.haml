= simple_form_for(@product, wrapper: :horizontal_form, html: { class: 'form-horizontal product' }) do |f|

  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :price
    = f.association :catalog, collection: Catalog.all


  .form-actions
    = f.button :submit, class: "btn btn-success"
